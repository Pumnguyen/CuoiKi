<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">

	<persistence-unit name="data" transaction-type="RESOURCE_LOCAL">
		<class>me.quangtruong.entity.Users</class>
		<class>me.quangtruong.entity.Orders</class>
		<class>me.quangtruong.entity.Product</class>
		<class>me.quangtruong.entity.ProductCategory</class>
		<class>me.quangtruong.entity.Rating</class>
		<class>me.quangtruong.entity.Transaction</class>

		<properties>
			<!-- MySQL JDBC connection -->
			<property name="jakarta.persistence.jdbc.url"
  				value="jdbc:mysql://localhost:3306/daweb2?characterEncoding=UTF-8" />

				
			<property name="jakarta.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="jakarta.persistence.jdbc.user"
				value="root" />
			<property name="jakarta.persistence.jdbc.password"
				value="123456" />

			<!-- Hibernate properties -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			
			<!-- Dialect for MySQL 8 -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
